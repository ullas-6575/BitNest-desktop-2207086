            <children>
                <Label text="Admin Login" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>

                <VBox maxWidth="300.0" spacing="15.0">
                    <children>
                        <TextField fx:id="txtUsername" promptText="Username" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                        <PasswordField fx:id="txtPassword" promptText="Password" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 10;">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>
                    </children>
                </VBox>

                <Label fx:id="lblError" textFill="#e74c3c">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleBackAction" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #90A4AE; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Back">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleLoginAction" prefHeight="45.0" prefWidth="140.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand;" text="Login">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                            <effect>
                                <DropShadow color="#00000033" height="5.0" radius="2.0" width="5.0" />
                            </effect>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </HBox>

            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <effect>
                <DropShadow color="#0000001a" height="20.0" radius="9.5" width="20.0" />
            </effect>
        </VBox>
    </children>
</AnchorPane>